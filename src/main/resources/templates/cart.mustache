<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ColorFinder</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    }
                },
            },
        }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
    <style>
        .tab-active {
            border-bottom: 2px solid black;
            color: black;
        }

        .tab:hover {
            color: black;
        }
    </style>
</head>

<body class="bg-white text-gray-800">

<div class="min-h-screen flex flex-col">
    <!-- Header -->
    <header class="bg-gray-100 py-4">
        <div class="container mx-auto flex justify-between items-center px-6">
            <h1 class="text-2xl font-bold">ColorFinder</h1>
            <nav>
                <ul class="flex space-x-4">
                    <li><a href="#" class="font-semibold">로그인</a></li>
                    <li><a href="#" class="font-semibold">회원가입</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <main class="flex-grow container mx-auto px-6 py-8">
        <!-- Tabs -->
        <div class="flex space-x-4 mb-6">
            <a href="#" class="tab font-semibold">쇼핑몰</a>
            <a href="#" class="tab font-semibold">퍼스널컬러 진단</a>
            <a href="#" class="tab font-semibold">커뮤니티</a>
            <a href="./OrderList.html" class="tab tab-active font-semibold">마이페이지</a>
        </div>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-6">
            <aside class="w-1/4 float-left">
                <ul class="bg-blue shadow rounded-lg p-4">
                    <li class="py-2"><a href="./OrderList.html" class="text-gray-700 hover:text-gray-900">주문목록</a></li>
                    <li class="py-2"><a href="./InformationUpdate.html" class="text-gray-700 hover:text-gray-900">정보수정</a></li>
                    <li class="py-2"><a href="./Cart.html" class="tab font-semibold">장바구니</a></li>
                    <li class="py-2"><a href="./MyPost.html" class="text-gray-700 hover:text-gray-900">나의 글</a></li>
                    <li class="py-2"><a href="./Scrap.html" class="text-gray-700 hover:text-gray-900">스크랩</a></li>
                </ul>
            </aside>

            <main class="w-3/4 float-right">
                <div class="bg-white shadow rounded-lg p-4">
                    <h2 class="text-gray-700 font-semibold text-lg mb-4">장바구니</h2>
                    <form id="cart-form" action="/cart/pay" method="post">
                        <input type="hidden" name="selectedProductIds" id="selectedProductIds" value="">
                        <div class="overflow-x-auto">
                            <table class="min-w-full">
                                <thead>
                                <tr class="text-left text-gray-600">
                                    <th class="py-2 px-2">선택</th>
                                    <th class="py-2 px-4">제품사진</th>
                                    <th class="py-2 px-4">제품이름</th>
                                    <th class="py-2 px-4">사이즈</th>
                                    <th class="py-2 px-4">제품단가</th>
                                    <th class="py-2 px-4">제품수량</th>
                                    <th class="py-2 px-4">가격</th>
                                </tr>
                                </thead>
                                <tbody class="text-gray-700">
                                {{#cartList}}
                                    <tr>
                                        <td class="py-2 px-4"><input type="checkbox" name="select-product" value="{{cartId}}"></td>
                                        <td class="py-2 px-4"><img src="https://dummyimage.com/60x60/000/fff&text=Shirt"></td>
                                        <td class="py-2 px-4">{{productName}}</td>
                                        <td class="py-2 px-4">{{productSize}}</td>
                                        <td class="py-2 px-4">{{productPrice}}</td>
                                        <td class="py-2 px-4">{{cartCnt}}</td>
                                        <td class="py-2 px-4">{{totalPrice}}</td>
                                    </tr>
                                {{/cartList}}
                                </tbody>
                            </table>
                        </div>
                        <div class="flex justify-between items-center mt-4">
                            <span class="text-lg">총액: <span id="total-price">0</span></span>
                            <button type="button" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" onclick="checkout()">결제하기</button>
                        </div>
                    </form>
                </div>
            </main>
            <div class="clear-both"></div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-100 py-4">
        <div class="container mx-auto text-center">
            <p>&copy; 2024 ColorFinder. All rights reserved.</p>
        </div>
    </footer>
</div>

<script>
    function updateTotalPrice() {
        let totalPrice = 0;
        document.querySelectorAll('input[name="select-product"]').forEach(function(checkbox) {
            if (checkbox.checked) {
                let priceElement = checkbox.parentNode.nextElementSibling.nextElementSibling.nextElementSibling;
                let price = parseInt(priceElement.innerText.replace(',', '').replace('원', ''));
                let quantityElement = checkbox.parentNode.nextElementSibling.nextElementSibling.nextElementSibling.nextElementSibling;
                let quantity = parseInt(quantityElement.innerText.replace(',', '').replace('원', ''));
                totalPrice += price * quantity;
            }
        });
        document.getElementById('total-price').innerText = totalPrice.toLocaleString() + '원';
    }

    window.onload = function() {
        document.querySelectorAll('input[name="select-product"]').forEach(function(checkbox) {
            checkbox.addEventListener('click', updateTotalPrice);
        });
    };

    function checkout() {
        let selectedProductIds = [];
        document.querySelectorAll('input[name="select-product"]:checked').forEach(function(checkbox) {
            selectedProductIds.push(checkbox.value);
        });
        document.getElementById('selectedProductIds').value = selectedProductIds.join(',');
        document.getElementById('cart-form').submit();
    }
</script>

</body>

</html>
